@{var counter = 1;}

<table class="tg">
    <tr>
        <th class="tg-qcxc" colspan="6">Day @counter</th>
    </tr>
    <tr>
        <td class="tg-q8ud"></td>
        <td class="tg-x46y">Blue Light</td>
