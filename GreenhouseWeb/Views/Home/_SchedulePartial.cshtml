
@{var counter = 1;}

<table class="tg">
    <tr>
        <th class="tg-qcxc" colspan="6">Day @counter</th>
    </tr>
    <tr>
        <td class="tg-q8ud"></td>
        <td class="tg-x46y">Blue Light</td>
        <td class="tg-x46y">Red Light</td>
        <td class="tg-x46y">Waterlevel</td>
        <td class="tg-x46y">Humidity</td>
        <td class="tg-x46y">Temperature</td>
    </tr>

    @for (int i = 0; i < 12; i++)
    {

        <tr>
            <td class="tg-0pky">@(i * 2)-@(i * 2 + 2)</td>
            <td class="tg-0pky"><input id="@(counter)bluelight@(i)" type="number" name="" value="" min="0" max="100" placeholder="20" /></td>
            <td class="tg-0pky"><input id="@(counter)redlight@(i)" type="number" name="" value="" min="0" max="100" placeholder="20" /></td>
            <td class="tg-0pky"><input id="@(counter)waterlevel@(i)" type="number" name="" value="" min="0" max="100" placeholder="20" /></td>
            <td class="tg-0pky"><input id="@(counter)humidity@(i)" type="number" name="" value="" min="0" max="100" placeholder="20" /></td>
            <td class="tg-0pky"><input id="@(counter)temperature@(i)" type="number" name="" value="" min="0" max="100" placeholder="20" /></td>
        </tr>

    }
</table>
@{counter++;}
